/*!Carousel CSS by dizzyzane: https://dizzyzane.github.io/carousel-css/ */

$carouselWidth = 550px;
$carouselHeight = 500px;
$carouselSpinnerWidth = 50px;
$carouselSpinnerFontSize = 62px;
$carouselRadius = 2px;
$carouselDotTopMargin = ($carouselHeight/11)*10;
$carouselMargin = 30px;

$carouselFullScreenSize = 27px;
$carouselFullScreenSizeFS = $carouselFullScreenSize*2;

@media screen, projection, tv
 // Not print or anything
 .carousel-container
  // Main container
  list-style-type none
  padding 0
  margin $carouselMargin auto
  max-width 100%
  width $carouselWidth
  height $carouselHeight
  border-radius 5px
  position relative
  .arrow
   // Directional arrows
   cursor pointer
   background rgba(0,0,0,0.5)
   color rgba(255,255,255,0.5)
   display block
   width $carouselSpinnerWidth
   font-size $carouselSpinnerFontSize
   text-align center
   bottom 0
   top 0
   line-height $carouselHeight
   position absolute
   z-index 9999
   padding-bottom 4px
   padding-top 2px
   border-radius $carouselRadius
   -webkit-user-select none
   -moz-user-select none
   -ms-user-select none
   user-select none
   &.back
    left 0px
    background linear-gradient(to right, rgba(0,0,0,0.5), transparent)
    &::before
     content '\2039'
   &.next
    right 0px
    background linear-gradient(to left, rgba(0,0,0,0.5), transparent)
    &::before
     content '\203a'
   &:hover
    color rgba(255,255,255,1)
  li:nth-child(1) > .dot
   // Move the first dot right a bit
   margin-left $carouselSpinnerWidth
  .carousel-content
   // The content of the carousel.
   height 0
   overflow hidden
   line-height 22px
   background #000
   position absolute
   top 0px
   border-radius 5px
   box-shadow 0 5px 5px -5px #333
   list-style-type none
   padding 0
   text-align center
   line-height $carouselHeight
   img
    opacity 0
    padding 0
    width auto
    height auto
    border-radius $carouselRadius
    transition 0.2s ease-in
    max-height $carouselHeight
    max-width $carouselWidth
    vertical-align middle
  .dot
   // The dot for a particular carousel item
   float left
   cursor pointer
   opacity 1
   width 12px
   height 12px
   background rgba(255,255,255,0.5)
   position relative
   margin-top $carouselDotTopMargin
   border-radius 50%
   z-index 999
   margin-right 8px
   display block
   border 1px solid black
   &:hover
    background #fff
  .carousel-toggle
   // Toggling the carousel
   display none
   &:checked + .dot,
   &.active + .dot
    // When checked we change the background of the .dot
    background #fff
   &:checked ~ .carousel-content,
   &.active ~ .carousel-content
    // Fill the size when selected
    height 100%
    width 100%
    img
     opacity 1
 .carousel-fullscreen
  position absolute
  bottom 0
  right 0
  margin 0 $carouselRadius $carouselRadius 0
  width $carouselFullScreenSize
  height @width
  z-index 99999
  cursor pointer
  background rgba(0,0,0,0.5)
  color rgba(255,255,255,0.5)
  svg
   width $carouselFullScreenSize
   height @width
  .exitFS
   fill none
 .carouselFullScreen
  &:checked,
  &.active
   &+.carousel-container
    border-radius 0
    margin 0
    position fixed
    width 100%
    height 100%
    top 0
    left 0
    background #000
    .arrow
     line-height 100vh
    .carousel-toggle:checked
     ~.carousel-content
      >li
       height 100%
       line-height 100vh
    .dot
     display none
    .carousel-fullscreen
     width $carouselFullScreenSizeFS
     height @width
     svg
      width $carouselFullScreenSizeFS
      height @width
     .exitFS
      fill currentColor
     .intoFS
      fill none
    img
     width auto
     height auto
     max-height 100vh
     max-width 100vw
   display block
   height $carouselHeight+($carouselMargin*2)
@media print, handheld
 .carousel-container
  &::before
   content "Gallery of images"
   font-size 2em
   align-self start
  text-align center
  border 2px dotted
  display flex
  flex-flow row wrap
  justify-content center
  ul, li
   list-style-type none
   margin 0
  label, input
   display none
  img
   max-width 200px
   max-height @max-width
   width auto
   height auto
