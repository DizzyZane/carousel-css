$carouselWidth = 550px;
$carouselHeight = 338px;
$carouselSpinnerWidth = 50px;
$carouselSpinnerFontSize = 62px;
$carouselRadius = 2px;
$carouselTopMargin = 56%;

.carousel-container
 list-style-type none
 padding 0
 margin 30px auto
 max-width 100%
 width $carouselWidth
 height $carouselHeight
 border-radius 5px
 position relative
 .arrow
  cursor pointer
  background rgba(0,0,0,0.5)
  color rgba(255,255,255,0.5)
  display block
  width $carouselSpinnerWidth
  font-size $carouselSpinnerFontSize
  text-align center
  bottom 0
  top 0
  line-height $carouselHeight
  position absolute
  z-index 9999
  padding-bottom 4px
  padding-top 2px
  border-radius $carouselRadius
  -webkit-user-select none
  -moz-user-select none
  -ms-user-select none
  user-select none
  &.back
   left 0px
   background linear-gradient(to right, rgba(0,0,0,0.5), transparent)
   &::before
    content "\2039"
  &.next
   right 0px
   background linear-gradient(to left, rgba(0,0,0,0.5), transparent)
   &::before
    content "\203a"
  &:hover
   color rgba(255,255,255,1)
 li:nth-child(1) > .dot
  margin-left $carouselSpinnerWidth
 .carousel-content
  height 0
  overflow hidden
  line-height 22px
  background #000
  position absolute
  top 0px
  border-radius 5px
  box-shadow 0 5px 5px -5px #333
  list-style-type none
  padding 0
  img
   opacity 0
   padding 0
   position absolute
   left 0
   top 0
   width auto
   max-width 100%
   height 100%
   border-radius $carouselRadius
   transition 0.2s ease-in
 .dot
  float left
  cursor pointer
  opacity 1
  width 12px
  height 12px
  background rgba(255,255,255,0.5)
  position relative
  margin-top $carouselTopMargin
  border-radius 50%
  z-index 999
  margin-right 8px
  display block
  border 1px solid black
  &:hover
   background #fff
 .carousel-toggle
  display none
  &:checked + .dot,
  &.active + .dot
   background #fff
  &:checked ~ .carousel-content,
  &.active ~ .carousel-content
   height 100%
   width 100%
   img
    opacity 1
